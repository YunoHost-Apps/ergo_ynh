#!/bin/bash

#=================================================
# IMPORT GENERIC HELPERS
#=================================================

source _common.sh
source /usr/share/yunohost/helpers

enable_ldap="0"
ynh_app_setting_set --key=enable_ldap --value=0

network_name="ErgoYunohost"
ynh_app_setting_set --key=network_name --value="ErgoYunohost"

server_name="ergo.yunohost"
ynh_app_setting_set --key=server_name --value="ergo.yunohost"

server=$domain

#=================================================
# INITIALIZE AND STORE SETTINGS
#=================================================

#=================================================
# DOWNLOAD, CHECK AND UNPACK SOURCE
#=================================================
ynh_script_progression "Setting up source files..."

# Download, check integrity, uncompress and patch the source from manifest.toml
ynh_setup_source --dest_dir="$install_dir"
ynh_setup_source --dest_dir="$install_dir" --source_id=ldap

chmod +x "$install_dir/ergo"

# Copy help file
mkdir -p "$install_dir/help"
if test -e "$YNH_APP_BASEDIR/sources/help"; then
    cp --archive "$YNH_APP_BASEDIR/sources/help/." "$install_dir/help"
fi

_ynh_replace_vars "$install_dir/help/index.html"

passwordhash=$((echo "$password"; echo "$password") | $install_dir/ergo genpasswd)

#=================================================
# APP INITIAL CONFIGURATION
#=================================================
ynh_script_progression "Adding $app's configuration files..."

ynh_config_add --template="default.yaml" --destination="$install_dir/ircd.yaml"

ynh_config_add --template="ldap-config.yaml" --destination="$install_dir/ldap-config.yaml"

ynh_config_add --template="ircd.motd" --destination="$install_dir/ircd.motd"

#=================================================
# SYSTEM CONFIGURATION
#=================================================
ynh_script_progression "Adding system configurations related to $app..."

# Create a dedicated NGINX config using the conf/nginx.conf template
ynh_config_add_nginx

# Create a dedicated systemd config
ynh_config_add_systemd
yunohost service add "$app" --description="A modern IRC server" --log="/var/log/$app/$app.log" --needs_exposed_ports=$port --needs_exposed_ports=$port_secure

# Use logrotate to manage application logfile(s)
ynh_config_add_logrotate

#=================================================
# SPECIFIC SETUP
#=================================================

# adding the ergo dedicated user to the 'ssl-cert' group
# to permit the use of the Let's Encrypt certs
usermod -a -G ssl-cert "$app"

#=================================================
# START SYSTEMD SERVICE
#=================================================
ynh_script_progression "Starting $app's systemd service..."

# Start a systemd service
ynh_systemctl --service="$app" --action="start"

#=================================================
# END OF SCRIPT
#=================================================

ynh_script_progression "Installation of $app completed"
